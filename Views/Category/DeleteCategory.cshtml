@using KarYemek.Models.CategoryViewModels
@model GetCategoryViewModel

@{
    ViewData["Title"] = "Kategori Silme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Kategori Silme</h1>

<h4 class="text-center">Bu kategoriyi silmek istediğinizden emin misiniz?</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4>@Model.Name</h4>
            </div>
            <div class="card-body">
                <!-- Category Image Display -->
                <div class="text-center mb-3">
                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <img src="@Model.ImageURL" alt="Kategori Fotoğrafı" class="img-fluid img-thumbnail" style="max-height: 300px; max-width: 100%;" />
                    }
                    else
                    {
                        <p class="text-muted">Kategori fotoğrafı mevcut değil.</p>
                    }
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Açıklama</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                </dl>
            </div>

            <div class="card-footer text-right">
                <!-- Silme Onayı Butonu -->
                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal">Sil</button>
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onayı Modalı -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-danger">Bu kategoriyi kalıcı olarak silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>

                <!-- Fotoğraf Önizlemesi -->
                <div class="text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <img src="@Model.ImageURL" alt="Kategori Fotoğrafı" class="img-fluid img-thumbnail" style="max-height: 200px; max-width: 100%;" />
                    }
                    else
                    {
                        <p class="text-muted">Kategori fotoğrafı mevcut değil.</p>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap ve jQuery için Gerekli JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
