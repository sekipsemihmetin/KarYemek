@{
    ViewData["Title"] = "Depomuz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .gallery-card {
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

            .gallery-card img {
                max-height: 200px;
                object-fit: cover;
                border-radius: 10px;
                padding: 10px;
                cursor: pointer;
            }

            .gallery-card:hover {
                transform: scale(1.05);
            }

        /* Modal İçin Stil */
        .modal-content img {
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container text-center mt-5">
        <h2 class="mb-4">Depomuz</h2>
        <div id="warehouseCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Depo+Foto+1" alt="Depo Foto 1" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this)">
                                <div class="card-body">
                                    <h5 class="card-title">Depo Bölümü 1</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Depo+Foto+2" alt="Depo Foto 2" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this)">
                                <div class="card-body">
                                    <h5 class="card-title">Depo Bölümü 2</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Depo+Foto+3" alt="Depo Foto 3" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this)">
                                <div class="card-body">
                                    <h5 class="card-title">Depo Bölümü 3</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Depo+Foto+4" alt="Depo Foto 4" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this)">
                                <div class="card-body">
                                    <h5 class="card-title">Depo Bölümü 4</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Depo+Foto+5" alt="Depo Foto 5" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this)">
                                <div class="card-body">
                                    <h5 class="card-title">Depo Bölümü 5</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Depo+Foto+6" alt="Depo Foto 6" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this)">
                                <div class="card-body">
                                    <h5 class="card-title">Depo Bölümü 6</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carousel Kontrolleri -->
            <button class="carousel-control-prev" type="button" data-bs-target="#warehouseCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#warehouseCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>
    </div>

    <!-- Modal - Resmi Büyütme -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Depo Fotoğrafı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" class="img-fluid" alt="Depo Fotoğrafı">
                </div>
            </div>
        </div>
    </div>

    <script>
        function showImage(img) {
            document.getElementById("modalImage").src = img.src;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
