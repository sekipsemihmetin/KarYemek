
@{
    ViewData["Title"] = "Media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Sosyal Medya ve Haber Paylaşımları</h2>
        <div class="row g-4">
            <!-- Web Haber -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Web Haber</h5>
                        <p class="card-text">Güncel internet haberleri burada görüntülenebilir.</p>
                        <a href="#" class="btn btn-primary">Detayları Gör</a>
                    </div>
                </div>
            </div>

            <!-- Facebook -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Facebook</h5>
                        <p class="card-text">Facebook paylaşımlarınızı buraya ekleyin.</p>
                        <a href="#" class="btn btn-primary">Facebook'a Git</a>
                    </div>
                </div>
            </div>

            <!-- Instagram -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Instagram</h5>
                        <p class="card-text">Son Instagram gönderilerinizi buraya ekleyin.</p>
                        <a href="#" class="btn btn-danger">Instagram'a Git</a>
                    </div>
                </div>
            </div>

            <!-- Twitter -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Twitter</h5>
                        <p class="card-text">Twitter paylaşımlarınız burada listelenebilir.</p>
                        <a href="#" class="btn btn-info">Twitter'a Git</a>
                    </div>
                </div>
            </div>

            <!-- LinkedIn -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">LinkedIn</h5>
                        <p class="card-text">LinkedIn paylaşımlarınızı buraya ekleyin.</p>
                        <a href="#" class="btn btn-primary">LinkedIn'e Git</a>
                    </div>
                </div>
            </div>

            <!-- TikTok -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">TikTok</h5>
                        <p class="card-text">TikTok videolarınızı buraya ekleyin.</p>
                        <a href="#" class="btn btn-dark">TikTok'a Git</a>
                    </div>
                </div>
            </div>

            <!-- Telegram -->
            <div class="col-md-4 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Telegram</h5>
                        <p class="card-text">Telegram duyurularınızı buraya ekleyin.</p>
                        <a href="#" class="btn btn-primary">Telegram'a Git</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



