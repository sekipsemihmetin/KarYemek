@{
    ViewData["Title"] = "Araç Filomuz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .gallery-card {
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

            .gallery-card img {
                max-height: 200px;
                object-fit: cover;
                border-radius: 10px;
                padding: 10px;
                cursor: pointer;
            }

            .gallery-card:hover {
                transform: scale(1.05);
            }

        /* Modal İçin Stil */
        .modal-content img {
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container text-center mt-5">
        <h2 class="mb-4">Araç Filomuz</h2>
        <div id="fleetCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Araç+1" alt="Araç 1" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this, 'Araç 1 - Yük Taşıma Aracı')">
                                <div class="card-body">
                                    <h5 class="card-title">Araç 1</h5>
                                    <p class="card-text">Yük Taşıma Aracı</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Araç+2" alt="Araç 2" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this, 'Araç 2 - Şehir İçi Dağıtım')">
                                <div class="card-body">
                                    <h5 class="card-title">Araç 2</h5>
                                    <p class="card-text">Şehir İçi Dağıtım</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Araç+3" alt="Araç 3" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this, 'Araç 3 - Soğuk Hava Depolu')">
                                <div class="card-body">
                                    <h5 class="card-title">Araç 3</h5>
                                    <p class="card-text">Soğuk Hava Depolu Araç</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Araç+4" alt="Araç 4" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this, 'Araç 4 - Uzun Mesafe Nakliye')">
                                <div class="card-body">
                                    <h5 class="card-title">Araç 4</h5>
                                    <p class="card-text">Uzun Mesafe Nakliye</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Araç+5" alt="Araç 5" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this, 'Araç 5 - Özel Taşıma Aracı')">
                                <div class="card-body">
                                    <h5 class="card-title">Araç 5</h5>
                                    <p class="card-text">Özel Taşıma Aracı</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card gallery-card">
                                <img src="https://via.placeholder.com/400x300?text=Araç+6" alt="Araç 6" class="card-img-top" data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImage(this, 'Araç 6 - Hızlı Kargo Aracı')">
                                <div class="card-body">
                                    <h5 class="card-title">Araç 6</h5>
                                    <p class="card-text">Hızlı Kargo Aracı</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carousel Kontrolleri -->
            <button class="carousel-control-prev" type="button" data-bs-target="#fleetCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#fleetCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        </div>
    </div>

    <!-- Modal - Resmi Büyütme -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Araç Filosu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" class="img-fluid" alt="Araç Fotoğrafı">
                    <p id="modalText" class="mt-2"></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showImage(img, text) {
            document.getElementById("modalImage").src = img.src;
            document.getElementById("modalText").innerText = text;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
