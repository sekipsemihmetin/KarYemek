@using KarYemek.Models.DailyMenuModels
@model GetDailyMenuViewModel

@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Sil</h1>

    <h3 class="text-center text-danger">Bu öğeyi silmek istediğinizden emin misiniz?</h3>
    <hr />

    <div class="card shadow-lg border-light rounded">
        <!-- Card Header -->
        <div class="card-header bg-danger text-white text-center">
            <h4>Günlük Menü Detayları</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <h4>Menü Bilgileri</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Note)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Note)
                </dd>
            </dl>
        </div>

        <!-- Yiyecekler Listesi -->
        <div class="card-body">
            <h5 class="fw-bold">Bu Günlük Menüyü İçeren Yiyecekler:</h5>
            <ul class="list-group">
                @foreach (var food in Model.DailyMenuFoods)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@food.Food.Name</strong><br />
                            <em>@food.Food.Description</em><br />
                            <span class="badge bg-secondary">@food.Food.Calorie kalori</span>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <!-- Silme Onayı Butonu ve Diğer İlgili İşlemler -->
        <div class="card-footer text-center">
            <!-- Silme Butonu -->
            <button class="btn btn-lg btn-danger px-5 shadow" data-toggle="modal" data-target="#deleteConfirmationModal">Sil</button>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onayı Modalı -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationLabel">Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-danger">Bu günlük menüyü kalıcı olarak silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>

               
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap ve jQuery için Gerekli JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
